{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "moduleResolution": "node",
    "jsx": "react"
  },

  "include": ["./src/**/*", "@types"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "./node_modules/**/*"
  ]
}
